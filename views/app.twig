<html lang="html">
<head>
    <meta charset="UTF-8"/>
    <title>{{ title }} [TheBankster]</title>


    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link type="text/css" rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.4/css/bulma.min.css">

</head>
<body>

{% include 'partial/navigation.twig' %}

<main>
    {% if breadcrumbs %}
        <nav class="breadcrumb is-centered has-arrow-separator" aria-label="breadcrumbs">
            <ul>
                {% for label,link in breadcrumbs %}
                    {% if loop.last %}
                        <li class="is-active"><a href="{{ link }}" aria-current="page">{{ label }}</a></li>
                    {% else %}
                        <li><a href="{{ link }}">{{ label }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </nav>
    {% endif %}

    <div class="container">
        {% block content %}
        {% endblock %}
    </div>
</main>

<script>BASE_URL = '{{ base_url() }}';</script>
{% if categories %}
    {% include 'partial/assignmodal.twig' %}
{% endif %}

{% block script %}
{% endblock script %}
<script src="{{ base_url() }}/script.js"></script>


</body>
</html>
